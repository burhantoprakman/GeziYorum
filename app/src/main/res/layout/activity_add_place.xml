<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context="com.geziyorum.AddPlaceActivity">

    <Button
        android:id="@+id/addplace_btn_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/addimagee" />

    <EditText
        android:id="@+id/addplace_edt_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addplace_btn_image"
        android:layout_marginTop="30dp"
        android:hint="Thumbnail" />

    <EditText
        android:id="@+id/addplace_edt_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addplace_edt_thumbnail"
        android:layout_marginTop="30dp"
        android:hint="Detail" />

    <Button
        android:id="@+id/addplace_btn_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addplace_edt_detail"
        android:layout_marginTop="30dp"
        android:text="@string/get_location" />

    <Button
        android:id="@+id/addplace_btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addplace_btn_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="SHARE" />

</RelativeLayout>
